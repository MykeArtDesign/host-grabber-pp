{
  "name": "host-grabber-pp",
  "version": "0.1.0",
  "description": "The descriptor that allows to run tests for this extension",
  "scripts": {
    "test": "karma start",
    "test:debug": "karma start --no-single-run --auto-watch",
    "lint": "eslint . && ./node_modules/web-ext/bin/web-ext lint --ignore-files \"coverage/**/*\" --ignore-files \"docs/**/*\"",
    "web-ext": "./node_modules/web-ext/bin/web-ext run --browser-console",
    "build": "./node_modules/web-ext/bin/web-ext build --ignore-files \"tests/**/*\""
  },
  "author": "",
  "license": "MPL-2.0",
  "homepage": "https://rhadamanthe.github.io/host-grabber-pp",
  "devDependencies": {
    "eslint": "^3.19.0",
    "expect.js": "^0.3.1",
    "karma": "^1.3.0",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "mocha": "^3.1.2",
    "sinon-chrome": "^2.1.2",
    "web-ext": "^1.6.0"
  },
  "bugs": {
    "url": "https://github.com/rhadamanthe/host-grabber-pp/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rhadamanthe/host-grabber-pp.git"
  }
}
